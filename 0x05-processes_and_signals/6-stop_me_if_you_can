#!/usr/bin/env bash
# Stops the 4-to_infinity_and_beyond script using /proc

# Find the PID(s) of the running script
pid=$(pgrep -f "4-to_infinity_and_beyond")

# Check if a PID was found
if [ -n "$pid" ]; then
    # Use the /proc filesystem to terminate the process
    echo -9 > /proc/"$pid"/oom_score_adj 2>/dev/null
    # Or use `pkill -f` as an alternative if allowed
    pkill -f "4-to_infinity_and_beyond"
fi
