#!/usr/bin/env bash
# Infinite loop that displays "To infinity and beyond" and handles SIGTERM gracefully

# Define a function to handle SIGTERM
sigterm_handler() {
    echo "I am invincible!!!"
}

# Trap the SIGTERM signal and call the handler
trap 'sigterm_handler' SIGTERM

# Infinite loop
while true; do
    echo "To infinity and beyond"
    sleep 2
done
